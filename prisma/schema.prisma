generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                     String        @id @default(cuid())
  name                   String?
  firstName              String?
  lastName               String?
  email                  String?       @unique
  role                   Role          @default(PASSENGER)
  phone                  String?
  rides                  RideRequest[]
  routes                 Route[]
  verifiedProfile        Boolean       @default(false)
  emailVerified          Boolean       @default(false)
  profilePhotoUrl        String?
  governmentId           String?
  govermentPhotoUrl      String?
  profession             String?
  companyName            String?
  companyId              String?
  wantToBeDriver         Boolean       @default(false)
  hasAccessToBeDriver    Boolean       @default(false)
  driversLicense         String?
  driversLicensePhotoUrl String?
  ratingScore            BigInt        @default(0)
  sessions               Session[]
  accounts               Account[]
  Files                  AssetFile[]
  car                    Car?          @relation(fields: [carId], references: [id])
  carId                  String?
  Reviews                Reviews[]

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  image String?

  @@map("user")
}

model Reviews {
  id       String  @id @default(cuid())
  route    Route   @relation(fields: [routeId], references: [id])
  routeId  String
  driver   User    @relation(fields: [driverId], references: [id])
  driverId String
  score    Int
  message  String?

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
}

model Car {
  id                      String      @id @default(cuid())
  make                    String
  model                   String
  year                    String
  plate                   String
  color                   String
  fuelType                String
  seatingCapacity         Int?
  photos                  AssetFile[]
  registrationNumber      String?
  registrationImageUrl    String?
  originalReceiptNumber   String?
  originalReceiptImageUrl String?
  insuranceNumber         String?
  insuranceImageUrl       String?
  User                    User[]
  createdAt               DateTime    @default(now())
  updatedAt               DateTime    @default(now()) @updatedAt
}

model AssetFile {
  id         String  @id @default(cuid())
  url        String
  uploadedBy User    @relation(fields: [userId], references: [id])
  userId     String
  Car        Car?    @relation(fields: [carId], references: [id])
  carId      String?
}

model Route {
  id             String        @id @default(cuid())
  driver         User          @relation(fields: [driverId], references: [id])
  driverId       String
  from           String
  startLat       Float
  startLng       Float
  to             String
  endLat         Float
  endLng         Float
  departureTime  DateTime
  availableSeats Int
  pricePerSeat   Decimal
  description    String?
  scheduleType   ScheduleType  @default(ONETIME)
  recurringType  RecurringType @default(DAILY)
  oneTimeDate    String?
  weekDays       String[]
  monthDays      String[]
  startDate      String?
  endDate        String?
  polyline       Json
  distanceKm     Float
  active         Boolean       @default(true)
  RideRequest    RideRequest[]
  Reviews        Reviews[]

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
}

model RideRequest {
  id              String     @id @default(cuid())
  passenger       User       @relation(fields: [passengerId], references: [id])
  passengerId     String
  pickupLocation  String
  pickupLat       Float
  pickupLng       Float
  dropoffLocation String
  dropLat         Float
  dropLng         Float
  numberOfSeats   Int
  notes           String?
  estimatedFare   Float
  status          RideStatus @default(PENDING)
  matchedRoute    Route?     @relation(fields: [routeId], references: [id])
  routeId         String?
  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @default(now()) @updatedAt
}

enum RecurringType {
  DAILY
  WEEKLY
  MONTHLY
  CUSTOM
}

enum ScheduleType {
  ONETIME
  RECURRING
}

enum Role {
  DRIVER
  PASSENGER
}

enum RideStatus {
  PENDING
  MATCHED
  CONFIRMED
  COMPLETED
  CANCELLED
}

model Session {
  id        String   @id
  expiresAt DateTime
  token     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([token])
  @@map("session")
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  @@map("account")
}

model Verification {
  id         String   @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now()) @updatedAt

  @@map("verification")
}
